#include <stdio.h>

int main()
{
    int length, breadth, area, perimeter;

    printf("Enter length\n");
    scanf("%d", &length);

    printf("Enter breadth\n");
    scanf("%d", &breadth);

    area = length*breadth;
    printf("the area of rectangle is : %d\n", area);

    perimeter = 2*(length + breadth);
    printf("the perimeter of rectangle is : %d\n", perimeter);

    return 0;
}

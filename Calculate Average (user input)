#include <stdio.h>

int main()
{
     int num1,num2,num3,avg;
     printf("Enter first number:\t");
     scanf("%d", &num1);
     printf("Enter second number:\t");
     scanf("%d", &num2);
     printf("Enter third number:\t");
     scanf("%d", &num3);
     avg=(num1+num2+num3)/3;
     printf("average of %d and %d and %d is %d",num1,num2,num3,avg);
     return 0;
}

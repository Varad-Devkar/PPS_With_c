#include <stdio.h>

int main()
{
     float num1,num2,num3,avg;
     printf("Enter first number:\t");
     scanf("%f", &num1);
     printf("Enter second number:\t");
     scanf("%f", &num2);
     printf("Enter third number:\t");
     scanf("%f", &num3);
     avg=(num1+num2+num3)/3;
     printf("average of %f and %f and %f is %f",num1,num2,num3,avg);
     return 0;
}
